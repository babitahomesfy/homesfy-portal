<!DOCTYPE html>
<html lang="en">

<head>
	{{> default}}
	<title>Document</title>
	<link rel="stylesheet" href="/static/scss/details.css">

</head>

<body>
	<main>
		<header>
			<nav>
				{{> logo}}
				{{> search-box}}
				<div class="nav-btn col-4">
					<ul>
						{{> icons}}
						{{> menu}}
					</ul>
				</div>
			</nav>
		</header>

		<div class="detail-container">
			<div class="col-8">
				{{> home-listing}}

				<section>
					<div class="main-details">
						<div class="apartment-details">
							<div class="apartment">
								<span>3BHK Apartment </span>
								<span>in lodha world tower</span>
							</div>
							<div class="Skyscraper">
								<img src="/static/img/details/Skyscraper.png" alt="">
								<p>Skyscraper in Mumbai</p>
							</div>
							<div class="status-bath-detail">
								<div class="status">
									<p>STATUS</p>
									<p>Ready to move</p>
								</div>
								<div class="bath">
									<p>BATH</p>
									<div>
										<span>2</span>
										<img src="/static/img/details/bathtub.png" alt="">
									</div>
								</div>
							</div>
						</div>
						<div class="price-mini-table">
							<div>
								<div class="emi">
									<div>
										<img src="" alt="rupee">
										<div>
											<p>2.5 crore</p>
											<p>5400 / sqft</p>
										</div>
									</div>
									<div>
										<p>EMI</p>
										<button></button>
									</div>
								</div>
								<div>
									<p>1800 sqft</p>
									<div>
										<p>CARPET AREA</p>
										<p>1500 sqft</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>

				<section class="">
					<div>
						<p>3 BHK Details</p>
					</div>

					<div>
						<table>
							<tr>
								<th>TYPOLOGY</th>
								<th>PRICE</th>
								<th>AREA SIZE</th>
								<th>CARPET AREA</th>
							</tr>
							<tr>
								<td>3 BHK</td>
								<td>2.5 Crore</td>
								<td>1800 Sq.ft</td>
								<td>1500 Sq.ft</td>
							</tr>
						</table>
					</div>

					<div>
						<div>
							<span>STATUS: </span>
							<span>Ready To Move</span>
						</div>
						<div>
							<span>RERA ID : </span>
							<span>P02500004327</span>
						</div>
					</div>

					<div>
						<div>
							<ul>
								<li>lodha world tower</li>
								<li>PROJECT AREA: <span> 2 acres</span></li>
								<li>FLOOR: <span>12</span></li>
								<li>FLATS: <span>68</span></li>
							</ul>
						</div>
						<div>
							<img src="" alt="">
						</div>
					</div>
				</section>

				<section class="location">
				</section>

				<section class="video-cta">
				</section>

				<section class="emi calculator">
				</section>

				<section class="enquiry-cta">
				</section>

				<section class="about-developer">
				</section>
			</div>

			<section class="form-section col-4">
				{{> form}}
			</section>

		</div>

		<section class="featured-project card">
			<div class="heading-content">
				<h2 class="heading">Featured</h2>
				<p class="sub-heading">Projects</p>
			</div>

			<div class="featured-projects-card-list">
				<div class="col-4">
					{{> featured-projects-card}}
				</div>

				<div class="col-4">
					{{> featured-projects-card}}
				</div>

				<div class="col-4">
					{{> featured-projects-card}}
				</div>
			</div>

			<div class="prev-next-btn">
				<button class="prev"><img src="/static/img/prev.png" alt=""></button>
				<button class="next"><img src="/static/img/next.png" alt=""></button>
			</div>
		</section>

		<section class="recently-added-project card">
			<div class="heading-content">
				<h2 class="heading">Recently</h2>
				<p class="sub-heading">Added Projects</p>
			</div>
			<div class="recently-added-project-card-list">
				<div class="col-4">
					{{> recently-added-project-card}}
				</div>

				<div class="col-4">
					{{> recently-added-project-card}}
				</div>
				
				<div class="col-4">
					{{> recently-added-project-card}}
				</div>
			</div>
		</section>

		<section class="featured-builder card">
			<div class="heading-content">
				<h2 class="heading">Featured</h2>
				<p class="sub-heading">Builder</p>
			</div>
			<h2> </h2>
			<div class="featured-builders-card-list">
				<div class="col-4">
					{{> featured-builders-card}}
				</div>
				<div class="col-4">
					{{> featured-builders-card}}
				</div>
				<div class="col-4">
					{{> featured-builders-card}}
				</div>

				
			</div>
		</section>

		{{> most-popular-search}}

		{{> footer}}
	</main>
</body>

</html>